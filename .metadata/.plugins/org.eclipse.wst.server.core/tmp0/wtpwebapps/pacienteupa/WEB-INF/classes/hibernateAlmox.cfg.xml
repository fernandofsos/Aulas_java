<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	
	<session-factory>
		
		<property name="connection.driver_class">org.postgresql.Driver</property>		 
		<property name="connection.url">jdbc:postgresql://177.200.91.82:5410/SYSHOSP_PROD</property> 
		<property name="connection.username">postgres</property>
		<property name="connection.password">@admin#isgh</property>
		<property name="hibernate.connection.pool_size">50</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.default_schema">almox</property> 
	 	 
		<property name="hibernate.c3p0.max_size">20</property>
		<property name="hibernate.c3p0.min_size">1</property>
		<property name="hibernate.c3p0.timeout">90</property>
		<property name="hibernate.c3p0.max_statements">10</property>
		<property name="hibernate.c3p0.idle_test_period">60</property>
		<property name="hibernate.c3p0.acquire_increment">2</property>
		<property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>	 	
	 	
		<property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="show_sql">false</property>  
 
		<!-- paciente mappings -->
		
			<mapping class="br.org.isgh.almox.beans.RequisicaoAlmoxBean"/>
			<mapping class="br.org.isgh.almox.beans.RequisicaoItemAlmoxBean"/>
			<mapping class="br.org.isgh.almox.beans.SaldoAlmoxBean"/>
			<mapping class="br.org.isgh.almox.beans.RequisicaoItemValidacaoAlmoxBean"/>
			<mapping class="br.org.isgh.almox.beans.SaldoEntidade"/>
			<mapping class="br.org.isgh.almox.beans.Almoxarifado"/>
			
		<!-- end paciente mappings  -->
	
	</session-factory>
	
</hibernate-configuration>