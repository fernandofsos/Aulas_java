	<queryString>
		<![CDATA[select p.dsc_nome,CASE WHEN D.NUM_RG IS NULL OR D.NUM_RG LIKE '' THEN '*************' ELSE D.NUM_RG END as NUM_RG,
	to_char(d.dat_comparecimento,'dd/MM/yyyy') as dat_comparecimento,d.dsc_periodo,u.dsc_usuario,u.num_conselho,c.sgl_conselho,
	(select vlr_parametro from medpoint.t_parametro where isn_parametro = 10) as endereco_completo,
	(SELECT VLR_PARAMETRO FROM MEDPOINT.T_PARAMETRO WHERE ISN_PARAMETRO = 13) AS DSC_UNIDADE
	from medpoint.t_as_declaracao d
					inner join medpoint.t_paciente p on p.isn_paciente = d.isn_paciente
					inner join seguranca.t_usuario u on u.isn_usuario = d.isn_usuario
					inner join medpoint.t_as_declaracao_tipo dt on dt.isn_as_declaracao_tipo = d.isn_as_declaracao_tipo
					left join seguranca.t_conselho c on c.isn_conselho = u.isn_conselho
	where d.isn_as_declaracao = $P{ISN_DECLARACAO}]]>
	</queryString>
