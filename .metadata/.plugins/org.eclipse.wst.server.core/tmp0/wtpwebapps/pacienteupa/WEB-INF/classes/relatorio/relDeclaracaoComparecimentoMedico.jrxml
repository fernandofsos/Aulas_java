					inner join seguranca.t_usuario u on u.isn_usuario = d.isn_usuario
					inner join medpoint.t_as_declaracao_tipo dt on dt.isn_as_declaracao_tipo = d.isn_as_declaracao_tipo
					left join seguranca.t_conselho c on c.isn_conselho = u.isn_conselho
where d.isn_as_declaracao = $P{ISN_DECLARACAO}]]>
