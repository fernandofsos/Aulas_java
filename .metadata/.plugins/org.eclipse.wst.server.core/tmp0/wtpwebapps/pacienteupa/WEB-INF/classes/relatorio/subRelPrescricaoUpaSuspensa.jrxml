	<parameter name="p2" class="java.lang.Integer">
		<defaultValueExpression><![CDATA[0]]></defaultValueExpression>
	</parameter>
	<queryString>
		<![CDATA[select
 CASE WHEN (pi.ISN_PRESCRICAO_PEP_IS is null) THEN '' ELSE upper(pi.DSC_PRESCRICAO) || ' ' || CASE WHEN pi.FLG_SE_NECESSARIO = 'S' THEN ' - ** SE NECESSÁRIO **' ELSE '' END ||' '|| coalesce(CASE D.DIAS WHEN null THEN '' ELSE '(**D'||D.DIAS||'**)' END,'') END DSC_DESCRICAO_SUSPENSAO,
      CASE pi.DSC_OBS_APZ WHEN '' THEN '-' ELSE pi.DSC_OBS_APZ END DSC_OBS_APZ
from medpoint.t_prescricao_pep_item pi
     inner join medpoint.t_prescricao_pep pp on pp.isn_prescricao_pep = pi.isn_prescricao_pep
     left join (select
        a.isn_internacao,
        b.isn_produto_almox,
        trunc(date(current_date) - date(a.dat_inicio)) dias
        from
        medpoint.t_ficha a,
        medpoint.t_ficha_item b
        where
        a.isn_ficha = b.isn_ficha and
        date_trunc('day', date(a.dat_inicio) + b.num_dias_validade_ficha::integer) >= date_trunc('day',current_date) and a.isn_internacao = $P{p1}::numeric
        ) D on pi.isn_produto_almox = D.isn_produto_almox
where pp.ISN_PRESCRICAO_PEP = $P{p2}::numeric and
pi.isn_prescricao_pep_is is not null
 order by 1 desc]]>
	</queryString>
