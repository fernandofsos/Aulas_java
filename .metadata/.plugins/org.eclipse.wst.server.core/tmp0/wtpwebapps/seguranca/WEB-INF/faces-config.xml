		<managed-bean-class>br.org.isgh.seguranca.forms.PermissaoLocalForm</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>formacao</from-outcome>
			<to-view-id>/formacao.jsf</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>sistema</from-outcome>
			<to-view-id>/sistema.jsf</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>conselho</from-outcome>
			<to-view-id>/conselho.jsf</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>telaAcao</from-outcome>
			<to-view-id>/telaAcao.jsf</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>entidade</from-outcome>
			<to-view-id>/entidade.jsf</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>setor</from-outcome>
			<to-view-id>/setor.jsf</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>grupo</from-outcome>
			<to-view-id>/grupo.jsf</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>usuario</from-outcome>
			<to-view-id>/usuario.xhtml</to-view-id>
		</navigation-case>		
		<navigation-case>
			<from-outcome>permissao</from-outcome>
			<to-view-id>/permissao.jsf</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>senha</from-outcome>
			<to-view-id>/senha.jsf</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>categoria</from-outcome>
			<to-view-id>/categoria.jsf</to-view-id>
		</navigation-case>	
		
		<navigation-case>
			<from-outcome>gerenciarUsuarios</from-outcome>
			<to-view-id>/gerenciarUsuarios.jsf</to-view-id>
		</navigation-case>	
		
		
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/login.jsf</to-view-id>
		</navigation-case>	
		<navigation-case>
			<from-outcome>alterarSenha</from-outcome>
			<to-view-id>/alterarSenha.jsf</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>recuperarSenha</from-outcome>
			<to-view-id>/recuperarSenha.jsf</to-view-id>
		</navigation-case>	
		<navigation-case>
			<from-outcome>especialidade</from-outcome>
			<to-view-id>/especialidade.jsf</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>permissaoLocal</from-outcome>
			<to-view-id>/permissaoLocal.jsf</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>login.jsf</display-name>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/principal.xhtml</to-view-id>
		</navigation-case>	
		<navigation-case>
			<from-outcome>loginAlterarSenha</from-outcome>
			<to-view-id>/alterarSenha.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>loginRecuperarSenha</from-outcome>
			<to-view-id>/recuperarSenha.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>alterarSenha.jsf</display-name>
		<from-view-id>/alterarSenha.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>alterarSenha</from-outcome>
			<to-view-id>/alterarSenha.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>recuperarSenha.jsf</display-name>
		<from-view-id>/recuperarSenha.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>recuperarSenha</from-outcome>
			<to-view-id>/recuperarSenha.xhtml</to-view-id>
		</navigation-case>		
	</navigation-rule>
	
	<navigation-rule>
		<display-name>sistema.jsf</display-name>
		<from-view-id>/sistema.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>sistema</from-outcome>
			<to-view-id>/sistema.jsf</to-view-id>
		</navigation-case>		
	</navigation-rule>

	<navigation-rule>
		<display-name>formacao.jsf</display-name>
		<from-view-id>/formacao.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>formacao</from-outcome>
			<to-view-id>/formacao.jsf</to-view-id>
		</navigation-case>		
	</navigation-rule>
	
