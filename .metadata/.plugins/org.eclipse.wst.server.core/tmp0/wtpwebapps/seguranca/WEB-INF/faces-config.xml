<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">
    
    <!-- Application Configuration -->
	<application>
		<!-- Facelet Configuration -->
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
		
		<!--  bundle configuration -->
		<message-bundle>ApplicationResources</message-bundle>		
		<resource-bundle>
			<base-name>ApplicationResources</base-name>
			<var>bundle</var>			
		</resource-bundle>		
	</application>


	<managed-bean>
		<managed-bean-name>sistemaForm</managed-bean-name>
		<managed-bean-class>br.org.isgh.seguranca.forms.SistemaForm</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>loginForm</managed-bean-name>
		<managed-bean-class>br.org.isgh.seguranca.forms.LoginForm</managed-bean-class>
