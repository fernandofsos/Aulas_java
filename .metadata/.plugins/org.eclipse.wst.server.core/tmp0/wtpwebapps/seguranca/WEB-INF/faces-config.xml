		<navigation-case>
			<from-outcome>conselho</from-outcome>
			<to-view-id>/conselho.jsf</to-view-id>
		</navigation-case>		
	</navigation-rule>
	
	<navigation-rule>
		<display-name>telaAcao.jsf</display-name>
		<from-view-id>/telaAcao.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>telaAcao</from-outcome>
			<to-view-id>/telaAcao.jsf</to-view-id>
		</navigation-case>		
	</navigation-rule>
	
	<navigation-rule>
		<display-name>setor.jsf</display-name>
		<from-view-id>/setor.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>setor</from-outcome>
			<to-view-id>/setor.jsf</to-view-id>
		</navigation-case>		
	</navigation-rule>	
	
	<navigation-rule>
		<display-name>senha.jsf</display-name>
		<from-view-id>/senha.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>senha</from-outcome>
			<to-view-id>/senha.jsf</to-view-id>
		</navigation-case>		
	</navigation-rule>
	
	<navigation-rule>
		<display-name>categoria.jsf</display-name>
		<from-view-id>/categoria.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>categoria</from-outcome>
			<to-view-id>/categoria.jsf</to-view-id>
