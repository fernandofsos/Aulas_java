	<navigation-rule>
		<display-name>especialidade.jsf</display-name>
		<from-view-id>/especialidade.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>especialidade</from-outcome>
			<to-view-id>/especialidade.jsf</to-view-id>
		</navigation-case>		
	</navigation-rule>
	
	<navigation-rule>
		<display-name>permissao.jsf</display-name>
		<from-view-id>/permissao.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>permissao</from-outcome>
			<to-view-id>/permissao.jsf</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>grupo</from-outcome>
			<to-view-id>/grupo.jsf</to-view-id>
		</navigation-case>		
	</navigation-rule>
	
	<navigation-rule>
		<display-name>grupo.jsf</display-name>
		<from-view-id>/grupo.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>grupo</from-outcome>
			<to-view-id>/grupo.jsf</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>permissao</from-outcome>
			<to-view-id>/permissao.jsf</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>*</display-name>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>inicio</from-outcome>
			<to-view-id>/principal.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<converter>
	  <converter-id>simpleIndexConverter</converter-id>
	  <converter-class>br.org.isgh.seguranca.util.jsf.SimpleIndexConverter</converter-class>
	</converter>
	<converter>
	  <converter-id>multipleIndexConverter</converter-id>
	  <converter-class>br.org.isgh.seguranca.util.jsf.MultipleIndexConverter</converter-class>
	</converter>	
	
	<lifecycle>
		<phase-listener>br.org.isgh.seguranca.util.AutorizacaoListener</phase-listener>
	</lifecycle>	
	
</faces-config>
